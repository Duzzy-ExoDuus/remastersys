# SYSTEM LOCALIZATION
# Target to file:
# /usr/share/locale/(language code)/LC_MESSAGES/remastersys-usb-key-copy-tool.mo
TEXTDOMAIN=remastersys-usb-key-copy-tool

DIALOG="$(which yad) --width=400 --center --fixed"
TITLE="--always-print-result --dialog-sep --window-icon=/usr/share/icons/hicolor/16x16/apps/remastersys.png --image=/usr/share/icons/hicolor/48x48/apps/remastersys.png --title="
TITLETEXT=$"Remastersys USB Startup Disk Tool"
TEXT="--text="
MSGBOX="--button=Ok:0"

# check if running with root privileges
if [ $(whoami) != "root" ]; then
    $DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT$"ERROR: This script must run as superuser. Try with \"sudo\"."
    exit 1
fi

copymenu() {
    if [ "$1" = "(null)" ]; then
        $DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT$"You must select a usb key to use. Click OK to return to main menu."
        mainmenu
    fi

    if [ "$2" = "(null)" -o "$2" = "" ]; then
        $DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT$"You must select a source to use. Click OK to return to main menu."
        mainmenu
    fi

    $DIALOG $TITLE"$TITLETEXT" $TEXT$"This will completely replace the contents of your usb drive\nwith the Bootable Live System.\n\nYou will not be able to undo this operation once it starts.\n\nClick OK to continue?"

    if [ $? != 0 ]; then
        mainmenu
    fi

    umount $(mount | grep $1 | awk '{print $1}')

    #do the copy
    dd if=$2 of=/dev/$1 bs=1M 2>/tmp/remusbprog & pid=$!

    PROGTOT=$(ls -l $2 | cut -d " " -f 5)
    PROGPERCENT=""

    while [ "$PROGPERCENT" != "100" ]; do
        sleep 1
        kill -USR1 $pid
        PROGCNT=$(tail -n 1 /tmp/remusbprog | grep "(" | cut -d " " -f 1)

        if [ "$PROGCNT" = "" ]; then
            PROGPERCENT="1"
        else
            PROGPERCENT=$((100 * $PROGCNT / $PROGTOT))
        fi

        echo $PROGPERCENT
        echo "#$PROGPERCENT %"

    done | $DIALOG $TITLE"$TITLETEXT" $TEXT$"Copying to USB Key Now.\n\nPlease Wait." --no-buttons --progress --auto-close --auto-kill

    rm -f /tmp/remusbprog
    sync

    killall -KILL tail

    $DIALOG $TITLE"$TITLETEXT" $TEXT$"Copy to USB key completed.\nClick OK to return to main menu."
    mainmenu
}

mainmenu() {
    DEVS=""
    DEVS=$(ls -l /dev/disk/by-path/*usb* | grep -v "part" | awk '{print $NF}' | awk -F "/" '{print $NF}')

    if [ "$DEVS" != "" ]; then
        for i in $DEVS; do
            USBDRIVESIZE=$(df -h | grep "$i" | tr -s " " | cut -f2 -d" ")
            if [ "$USBDRIVESIZE" != "" ]; then
                USBDRIVES="$USBDRIVES!$i-$USBDRIVESIZE"
            fi
        done
    fi
    
    if [ "$DEVS" = "" -o "$USBDRIVES" = "" ]; then
        $DIALOG $TITLE"$TITLETEXT" $TEXT$"No USB Keys found.\n\nPlease insert a USB Key and then\nclick OK to return to main menu\nor Cancel to quit."

        if [ "$?" = "0" ]; then
            mainmenu
        else
            exit
        fi
    fi

    ChooseUSB=$"Choose a USB Key"
    ChooseSource=$"Choose a Source Image"
    Quit=$"Quit"
    CopyToUSB=$"Copy to USB Key"

    CHOICES=$($DIALOG $TITLE"$TITLETEXT" --form --field="$ChooseUSB":CB ${USBDRIVES#?} --field="$ChooseSource":FL --button="$Quit":2 --button="$CopyToUSB":1)
    retval="$?"

    if [ "$retval" = "1" ]; then
        USBDRIVE=$(echo $CHOICES | cut -d "|" -f 1 | cut -d "-" -f 1)
        PICKSOURCE=$(echo $CHOICES | cut -d "|" -f 2)
        copymenu $USBDRIVE $PICKSOURCE
    else
        exit
    fi
}

mainmenu
